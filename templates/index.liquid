{% section 'hero-banner' %}
{% section 'featured-products' %}

{% comment %} Additional sections can be added here {% endcomment %}

<style>
  .homepage-sections {
    padding: 6rem 0;
    background-color: #f9f9f9;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    max-width: var(--page-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .collection-card {
    position: relative;
    height: 400px;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }

  .collection-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .collection-card:hover img {
    transform: scale(1.05);
  }

  .collection-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    padding: 3rem 2rem 2rem;
    color: white;
  }

  .collection-title {
    font-family: 'Playfair Display', serif;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .collection-button {
    display: inline-block;
    padding: 1rem 2rem;
    background: transparent;
    border: 2px solid white;
    color: white;
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .collection-button:hover {
    background: white;
    color: black;
  }
</style>

<section class="homepage-sections">
  <div class="section-header">
    <h2 class="section-title">Our Collections</h2>
    <p class="section-description">Browse our carefully curated perfume collections</p>
  </div>

  <div class="collections-grid">
    <!-- Men's Collection -->
    <div class="collection-card">
      <img src="https://images.unsplash.com/photo-1590736968625-0e7c8bdb8e3f?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" 
           alt="Men's Collection"
           loading="lazy">
      <div class="collection-overlay">
        <h3 class="collection-title">Men's Collection</h3>
        <a href="/collections/men" class="collection-button">Shop Now</a>
      </div>
    </div>

    <!-- Women's Collection -->
    <div class="collection-card">
      <img src="https://images.unsplash.com/photo-1541643600914-78b084683601?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" 
           alt="Women's Collection"
           loading="lazy">
      <div class="collection-overlay">
        <h3 class="collection-title">Women's Collection</h3>
        <a href="/collections/women" class="collection-button">Shop Now</a>
      </div>
    </div>

    <!-- Unisex Collection -->
    <div class="collection-card">
      <img src="https://images.unsplash.com/photo-1523293182086-7651a899d37f?ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=80" 
           alt="Unisex Collection"
           loading="lazy">
      <div class="collection-overlay">
        <h3 class="collection-title">Unisex Collection</h3>
        <a href="/collections/unisex" class="collection-button">Shop Now</a>
      </div>
    </div>
  </div>
</section>
